{
  "apps": [
    {
      "script": "build/index.js",
      "name": "vendure-demo",
      "max_memory_restart": "1G",
      "cron_restart": "0 3 */1 * *",
      "kill_timeout": 2000
    },
    {
      "script": "dist/server/main.js",
      "name": "vendure-storefront",
      "max_memory_restart": "1G",
      "kill_timeout": 2000
    },
    {
      "script": "serve",
      "env": {
        "PM2_SERVE_PATH": ".",
        "PM2_SERVE_PORT": 3000,
        "PM2_SERVE_SPA": "true",
        "PM2_SERVE_HOMEPAGE": "./index.html"
      },
      "name": "yoga-lichtquelle",
      "max_memory_restart": "1G",
      "kill_timeout": 2000
    }
  ]
}
